<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:id="@+id/llBaseEtiquetaApp"
              android:layout_gravity="center"
              android:layout_marginLeft="1dp"
              android:layout_marginTop="1dp"
              android:layout_marginRight="1dp"
              android:paddingRight="15dp"
              android:paddingLeft="15dp"
              android:background="@drawable/etiqueta_app">

    <ImageView
        android:id="@+id/ivImagenLayoutApps"
        android:padding="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/base_imagen"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical|left"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/base_textos">
        <TextView
            android:id="@+id/tvTituloLayoutApps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="bottom|left"
            android:text="Titulo App"
            android:textSize="13sp"
            android:textColor="#fff"
            android:shadowColor="#000000"
            android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvPrecioLayoutApps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="top|left"
            android:text="Free"
            android:textSize="12sp"
            android:textColor="#ff0"
            android:shadowColor="#000"
            android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
            android:textStyle="bold|italic"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>