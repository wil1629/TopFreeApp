<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#4000"/>
        </shape>
    </item>
    <item android:gravity="center" android:bottom="1dp">
        <shape android:shape="oval">
            <gradient
                android:centerY="50%"
                android:centerX="50%"
                android:startColor="#ff0"
                android:endColor="#ff9100"
                android:gradientRadius="100"
                android:type="radial"/>

        </shape>
    </item>
    <item android:top="18dp" android:right="14dp" android:gravity="top|right" android:width="8dp" android:height="10dp">
        <shape android:shape="oval">
            <solid android:color="#000"/>
        </shape>
    </item>
    <item android:top="18dp" android:left="14dp" android:gravity="top|left" android:width="8dp" android:height="10dp">
        <shape android:shape="oval">
            <solid android:color="#000"/>
        </shape>
    </item>

    <item android:bottom="10dp" android:gravity="center|bottom" android:width="26dp" android:height="10dp">
        <shape android:shape="oval">
            <solid android:color="#e8000000"/>
        </shape>
    </item>

    <item android:bottom="14dp" android:gravity="center|bottom" android:width="26dp" android:height="8dp">
        <shape android:shape="oval">
            <solid android:color="#ffffea00"/>
        </shape>
    </item>

</layer-list>